/*
 * Empty C++ Application
 */

#include "BNO055.h"
#include "BMP280.h"
#include "circular_buffer.h"
#include <sleep.h>

#define delay(x) usleep(x*1000)
#define SEA_LEVEL_PRESSURE    1015.0f   // sea level pressure

typedef BMP280_IIC BMP;
typedef BNO055_IIC BNO;

// Mailbox commands
#define CONFIG_IOP_SWITCH       0x1
#define GET_AXIS_DATA           0x3
#define GET_EUL_DATA            0x5
#define GET_QUA_DATA            0x7
#define GET_TEMPERATURE         0xB
#define GET_PRESSURE            0xD
#define RESET                   0xF

BMP bmp(BMP::eSdo_low);
BNO bno(0x28);
int main()
{
	//float   alti = bmp.calAltitude(SEA_LEVEL_PRESSURE, press);

	//sLiaAnalog = bno.getAxis(BNO::eAxisLia);    // read linear acceleration
	//sGrvAnalog = bno.getAxis(BNO::eAxisGrv);    // read gravity vector

	int cmd;
	int16_t ax, ay, az;
	int16_t gx, gy, gz;
	int16_t mx, my, mz;
	BNO::sAxisAnalog_t   sAccAnalog, sMagAnalog, sGyrAnalog, sLiaAnalog, sGrvAnalog;
	BNO::sEulAnalog_t    sEulAnalog;
	BNO::sQuaAnalog_t    sQuaAnalog;

	// Initialization
	bmp.BMP280_device = bno.BNO055_device = i2c_open_device(0);

	bno.reset();
	while (bno.begin() != BNO::eStatusOK) {
		bno.lastOperateStatus;
		xil_printf("Initialization failed");
	}

	bmp.reset();
	if (bmp.begin() != BMP::eStatusOK) {
		xil_printf("Initialization failed");
	}

	// Run application
	while(1){
	 // wait and store valid command
	  while((MAILBOX_CMD_ADDR & 0x01)==0);
	  cmd = MAILBOX_CMD_ADDR;

	  switch(cmd){
		  case CONFIG_IOP_SWITCH:
			// use dedicated I2C - no operation needed
			bno.reset();
			if (bno.begin() != BNO::eStatusOK)
				MAILBOX_DATA(0) = 0;
			else
				MAILBOX_DATA(0) = 1;

			bmp.reset();
			if (bmp.begin() != BMP::eStatusOK)
				MAILBOX_DATA(1) = 0;
			else
				MAILBOX_DATA(1) = 1;
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 case GET_AXIS_DATA:
			sAccAnalog = bno.getAxis(BNO::eAxisAcc);    // read acceleration
			sGyrAnalog = bno.getAxis(BNO::eAxisGyr);    // read gyroscope
			sMagAnalog = bno.getAxis(BNO::eAxisMag);    // read geomagnetic
			MAILBOX_DATA_FLOAT(0) = (signed int)sAccAnalog.x;
			MAILBOX_DATA_FLOAT(1) = (signed int)sAccAnalog.y;
			MAILBOX_DATA_FLOAT(2) = (signed int)sAccAnalog.z;
			MAILBOX_DATA_FLOAT(3) = (signed int)sGyrAnalog.x;
			MAILBOX_DATA_FLOAT(4) = (signed int)sGyrAnalog.y;
			MAILBOX_DATA_FLOAT(5) = (signed int)sGyrAnalog.z;
			MAILBOX_DATA_FLOAT(6) = (signed int)sMagAnalog.x;
			MAILBOX_DATA_FLOAT(7) = (signed int)sMagAnalog.y;
			MAILBOX_DATA_FLOAT(8) = (signed int)sMagAnalog.z;
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 case GET_EUL_DATA:
			sEulAnalog = bno.getEul();                  // read euler angle
			MAILBOX_DATA_FLOAT(0) = (signed int)sEulAnalog.head;
			MAILBOX_DATA_FLOAT(1) = (signed int)sEulAnalog.roll;
			MAILBOX_DATA_FLOAT(2) = (signed int)sEulAnalog.pitch;
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 case GET_QUA_DATA:
			sQuaAnalog = bno.getQua();                  // read quaternion
			MAILBOX_DATA_FLOAT(0) = (signed int)sQuaAnalog.w;
			MAILBOX_DATA_FLOAT(1) = (signed int)sQuaAnalog.x;
			MAILBOX_DATA_FLOAT(2) = (signed int)sQuaAnalog.y;
			MAILBOX_DATA_FLOAT(3) = (signed int)sQuaAnalog.z;
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 case GET_TEMPERATURE:
			MAILBOX_DATA_FLOAT(0) = bmp.getTemperature();
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 case GET_PRESSURE:
			MAILBOX_DATA(0) = bmp.getPressure();
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 case RESET:
			bno.reset();
			MAILBOX_CMD_ADDR = 0x0;
			break;

		 default:
			MAILBOX_CMD_ADDR = 0x0;
			break;
	  }
	}
	return 0;
}

